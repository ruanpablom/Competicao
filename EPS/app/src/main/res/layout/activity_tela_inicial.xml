<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.msolutionsoftware.reciclaeps.TelaInicial"
    android:background="#e6e6e6">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RECICLA EPS"
        android:id="@+id/reciclaEps"
        android:textSize="45sp"
        android:typeface="monospace"
        android:textAlignment="center"
        android:layout_marginTop="44dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/boneco_eps"
        android:layout_below="@+id/reciclaEps"
        android:layout_centerHorizontal="true" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOME"
        android:id="@+id/home_button"
        android:textStyle="bold"
        android:typeface="monospace"
        android:background="#ffffff"
        android:textColor="#757373"
        android:visibility="invisible"
        android:onClick="onClick"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_logout_from_google"
        android:id="@+id/btn_sign_out"
        android:textColor="#040000"
        android:background="#ffffff"
        android:typeface="monospace"
        android:visibility="invisible"
        android:layout_below="@+id/home_button"
        android:layout_marginTop="5dp"
        android:layout_alignRight="@+id/sign_in_button"
        android:layout_alignEnd="@+id/sign_in_button"
        android:layout_alignLeft="@+id/sign_in_button"
        android:layout_alignStart="@+id/sign_in_button"
        android:onClick="onClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_revoke_access"
        android:id="@+id/btn_revoke_access"
        android:textColor="#010000"
        android:background="#ffffff"
        android:typeface="monospace"
        android:visibility="gone"
        android:layout_below="@+id/btn_sign_out"
        android:layout_alignLeft="@+id/btn_sign_out"
        android:layout_alignStart="@+id/btn_sign_out"
        android:layout_marginTop="5dp"
        android:layout_alignRight="@+id/btn_sign_out"
        android:layout_alignEnd="@+id/btn_sign_out"
        android:onClick="onClick" />


</RelativeLayout>
